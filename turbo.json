{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "prepare": {
      "dependsOn": ["^prepare"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["prepare", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "test": {
      "dependsOn": ["prepare", "^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {},
    "lint:fix": {}
  }
}
